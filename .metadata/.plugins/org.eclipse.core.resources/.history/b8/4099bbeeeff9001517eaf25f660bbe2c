package br.com.tecnonoticias.BubbleSort;

public class BubbleSort {

	public BubbleSort(int[] vetor) {
		int aux;

		for (int i = 0; i < vetor.length;  i++) {

			for (int j = 0; j < vetor.length - 1; j++) {

				if (vetor[j] > vetor[j + 1]) {

					aux = vetor[j];

					vetor[j] = vetor[j + 1];

					vetor[j + 1] = aux;

				}
			}
		}
	}
}