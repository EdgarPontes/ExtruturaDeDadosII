package br.com.tecnonoticias.escreverNumero.SelectSort;

public class SelectSort {

	public void selectSort() {
		int[] sort = { 8, 5, 3, 7, 1, 4 };

		for (int fixo = 0; fixo < sort.length - 1; fixo++) {

			int menor = fixo;

			for (int i = fixo + 1; i < sort.length; i++) {
			
				if (sort[i] < sort[menor]) {
			
					menor = i;
					
				}
			}
			if (menor != fixo) {
				
				int aux = sort[fixo];
				
				sort[fixo] = sort[menor];
				
				sort[menor] = aux;
			}
			System.out.println(sort[fixo]);
		}
	}

	public static void main(String[] args) {
		new SelectSort().selectSort();
	}
}